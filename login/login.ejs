<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles.css" />
  </head>

  <body>
    <h1>SignIn</h1>

    <form action="/" method="post">
      <fieldset>
        <% for(let url in file){ %>
        <legend><%= url %></legend>
        
          <% for(let account of file[url] ){ %>
            <input type="submit" class="btn btn-outline-dark" name="<%= url %>" value="<%= account.name %>">
            
            <% const {GLN, GTIN} = account %>
            <% if(GLN && GTIN){ %>
              <p>GLN: <%= GLN %> / GTIN: <%= GTIN %></p>
            <% } %>

          <% } %>             
          
          <hr>
        <% } %>
      </fieldset>

    </form>

    <script>
      const url = document.querySelector("input[name='chosenUrl']");
    </script>
    
  </body>
</html>
