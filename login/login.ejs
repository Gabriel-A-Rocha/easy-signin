<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles.css" />
  </head>

  <body>
    <h1>SignIn</h1>

    <form action="/" method="post">
      <fieldset>
        <% for(let url in config){ %>
        <legend><%= url %></legend>
        
          <% for(let [i,account] of config[url].entries() ){ %>
           <!--  <input class="<%= url %>" type="radio" name="account" id="<%= account.name + i %>" value="<%= account.name %>" checked/>
            <label for="<%= account.name + i %>"> <%= account.name %> </label><br /> -->
                      
            <input type="submit" class="btn btn-secondary" name="<%= url %>" value="<%= account.name %>">
          <% } %>   
          
          
          <hr>
        <% } %>
      </fieldset>


      <input class="btn btn-primary" type="submit" value="Sign In" />
    </form>

    <script>
      const url = document.querySelector("input[name='chosenUrl']");
    </script>
    
  </body>
</html>
